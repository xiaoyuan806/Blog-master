<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <display-name></display-name>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>AddDiaryServlet</servlet-name>
    <servlet-class>cn.edu.ldu.servlet.AddDiaryServlet</servlet-class>
  </servlet>
  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>WriteTitServlet</servlet-name>
    <servlet-class>cn.edu.ldu.servlet.WriteTitServlet</servlet-class>
  </servlet>

  <servlet>
    <description>This is the description of my J2EE component</description>
    <display-name>This is the display name of my J2EE component</display-name>
    <servlet-name>GetDiaryListServlet</servlet-name>
    <servlet-class>cn.edu.ldu.servlet.GetDiaryListServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>AddDiaryServlet</servlet-name>
    <url-pattern>/servlet/AddDiaryServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>WriteTitServlet</servlet-name>
    <url-pattern>/servlet/WriteTitServlet</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>GetDiaryListServlet</servlet-name>
    <url-pattern>/servlet/GetDiaryListServlet</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
    <welcome-file>/jsp/login.jsp</welcome-file>
  </welcome-file-list>
</web-app>